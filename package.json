{
  "name": "dbt-styleguide",
  "version": "0.0.1",
  "description": "Styleguide for dbt",
  "sass": "sass/sass.scss",
  "main": "dist/scripts.js",
  "style": "dist/style.scss",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "release": "release-it",
    "prebuild": "./node_modules/.bin/rimraf dist",
    "build": "jekyll build",
    "postbuild": "./node_modules/.bin/copyfiles --error --verbose --flat --up 2 \"_site/ui/**/*\" dist"
  },
  "files": [
    "_includes/**/*",
    "dist/**/*",
    "sass/**/*",
    "svg/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fishtown-analytics/dbt-styleguide.git"
  },
  "author": "",
  "license": "",
  "bugs": {
    "url": "https://github.com/fishtown-analytics/dbt-styleguide/issues"
  },
  "homepage": "https://github.com/fishtown-analytics/dbt-styleguide#readme",
  "devDependencies": {
    "auto-changelog": "^2.2.0",
    "copyfiles": "^2.3.0",
    "release-it": "^13.6.6",
    "rimraf": "^3.0.2"
  },
  "release-it": {
    "github": {
      "release": false
    },
    "npm": {
      "publish": false
    },
    "git": {
      "addUntrackedFiles": true,
      "changelog": "npx auto-changelog --stdout --commit-limit false -u --template https://raw.githubusercontent.com/release-it/release-it/master/templates/changelog-compact.hbs",
      "tag": true,
      "requireCommits": true,
      "tagAnnotation": "Release ${version}",
      "tagArgs": [],
      "push": true,
      "pushArgs": [
        "--follow-tags"
      ],
      "requireUpstream": false
    },
    "hooks": {
      "before:init": "npm run build",
      "after:bump": "npx auto-changelog -p"
    }
  }
}